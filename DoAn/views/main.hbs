    <!DOCTYPE html>
    <html>

    <head>
        <title>Add Product Form</title>
        <style>
            label {
                display: block;
                margin-bottom: 5px;
            }

            input[type="text"],
            select {
                padding: 5px;
                margin-bottom: 10px;
                border: 1px solid #ccc;
                border-radius: 5px;
                font-size: 16px;
            }

            input[type="submit"] {
                background-color: #4CAF50;
                color: white;
                padding: 10px 20px;
                border: none;
                border-radius: 5px;
                font-size: 16px;
                cursor: pointer;
            }

            input[type="submit"]:hover {
                background-color: #3e8e41;
            }

            .error {
                color: red;
                font-size: 14px;
                margin-bottom: 5px;
            }
        </style>
    </head>

    <body>
        {{{body}}}


        <script>
            // validate form on submit
            document.getElementById("add-product-form").addEventListener("submit", function (event) {
                // clear previous error messages
                document.getElementById("name-error").innerHTML = "";
                document.getElementById("category-error").innerHTML = "";
                document.getElementById("price-error").innerHTML = "";
                // validate name field
                let nameInput = document.getElementById("name");
                if (nameInput.value.trim() === "") {
                    document.getElementById("name-error").innerHTML = "Please enter a product name.";
                    nameInput.focus();
                    event.preventDefault();
                    return false;
                }
                // validate category field
                let categoryInput = document.getElementById("category");
                if (categoryInput.value === "") {
                    document.getElementById("category-error").innerHTML = "Please select a category.";
                    categoryInput.focus();
                    event.preventDefault();
                    return false;
                }
                // validate price field
                let priceInput = document.getElementById("price");
                if (isNaN(priceInput.value) || priceInput.value.trim() === "") {
                    document.getElementById("price-error").innerHTML = "Please enter a valid price.";
                    priceInput.focus();
                    event.preventDefault();
                    return false;
                }
                return true;
            });
        </script>
    </body>

